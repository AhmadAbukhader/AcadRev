# ===============================
# AcadRev Environment Configuration
# ===============================
# Copy this file to .env and update with your actual values

# ===============================
# Domain Configuration
# ===============================
# Your main domain (for frontend)
DOMAIN=yourdomain.com

# Your API subdomain (for backend)
API_DOMAIN=api.yourdomain.com

# ===============================
# Let's Encrypt Configuration
# ===============================
# Email for SSL certificate notifications
ACME_EMAIL=admin@yourdomain.com

# ===============================
# Frontend Configuration
# ===============================
# API URL for frontend (should match API_DOMAIN with https)
VITE_API_URL=https://api.yourdomain.com

# ===============================
# Database Configuration
# ===============================
# Database name
DB_NAME=acadrev

# Database username
DB_USERNAME=postgres

# Database password (CHANGE THIS TO A STRONG PASSWORD!)
DB_PASSWORD=your-secure-database-password-here

# Database schema
DB_SCHEMA=acadrev_schema

# Database port (only used for local development)
DB_PORT=5432

# ===============================
# Backend Configuration
# ===============================
# Backend server port
SERVER_PORT=8089

# JWT Secret Key (GENERATE A NEW SECURE KEY!)
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=92f42dd3b0d3c976f4eb4a166b8eb9d825baf2063c1ad612bd7eb6035fd3ce5b

# JWT token expiration time in milliseconds (default: 1 hour)
JWT_EXPIRATION_TIME=3600000

# ===============================
# File Upload Configuration
# ===============================
# Maximum file size for uploads
MAX_FILE_SIZE=10MB

# Maximum request size
MAX_REQUEST_SIZE=10MB

# ===============================
# Hibernate/JPA Configuration
# ===============================
# SQL logging level (INFO, DEBUG, or TRACE)
HIBERNATE_SQL_LOG_LEVEL=INFO

# SQL binder logging level
HIBERNATE_BINDER_LOG_LEVEL=INFO

# Show SQL queries in logs (true/false)
JPA_SHOW_SQL=false

# DDL auto mode (none, validate, update, create, create-drop)
# USE "none" IN PRODUCTION!
JPA_DDL_AUTO=none

# Format SQL output (true/false)
HIBERNATE_FORMAT_SQL=false
